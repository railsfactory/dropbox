<h1 class="underline">Listing Galleries</h1>

<table class="table table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3">Action</th>
  </tr>
</thead>

<tbody>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.asset.url %></td>
      <td><%= link_to 'Show', gallery_path(gallery), class: "btn-link" %></td>
      <td><%= link_to 'Edit', "", class: "btn-link" %></td>
      <td><%= link_to 'Delete', "", method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-link" %></td>
    </tr>
  <% end %>

</tbody>
</table>

<br />
<%= link_to 'New File', new_gallery_type_path({type: "GalleryFile"}), class: "btn-link" %> | <%= link_to 'New Folder', new_gallery_type_path({type: "GalleryFolder"}), class: "btn-link" %>
