<div class="container">
  <div class="questionnaires_<%= action_name %>">
    <h1>
      Surveys
    </h1>
    <%= link_to "New", new_questionnaires_path %>
    <hr>
    <% if @questionnaires.empty? %>
      <p> There are no questionnaires </p>
    <% else %>
      <table class='table table-nonfluid survey-table'>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Questions</th>
            <th>Participants</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'questionnaire', collection: @questionnaires %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
