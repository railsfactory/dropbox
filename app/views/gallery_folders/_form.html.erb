
<%= form_for @gallery, html: { class: "form-horizontal" } do |f| %>
  <% if f.object.class == GalleryFile  %>
  <div class="form-group required">
    <%= label_tag "Choose Parent Folder", nil, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.select :parent_id, options_for_select(Gallery.all_folders(current_user.id, "GalleryFolder").map{|g| [g.name, g.id]}), class: "form-control", prompt: true %>
    </div>
  </div>
  <div class="form-group required">
    <%= label_tag "Choose Parent Folder", nil, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.file_field :asset %>
    </div>
  </div>
  <% end %>
  <div class="form-group required">
    <%= label_tag "Name", nil, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.hidden_field :type %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit 'Save', :class => 'btn btn-inverse btn-primary', disable_with: "Submitting..." %>
  </div>
</div>
<% end %>

